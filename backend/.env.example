# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
# Local MongoDB (Development)
MONGODB_URI=mongodb://localhost:27017/user-management
# MongoDB Atlas (Production) - Replace with your connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/purplemerit?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Admin User Configuration
ADMIN_PASSWORD=Admin@12345

# Frontend URL (for CORS) - Comma-separated for multiple origins
# Development
FRONTEND_URL=http://localhost:5173
# Production example (update with your Vercel URL)
# FRONTEND_URL=http://localhost:5173,https://your-app.vercel.app
